<div class="aiz-content-wrapper">
  <%- include('../partials/topbar.ejs') %>
  <!-- .aiz-topbar -->
  <div class="aiz-main-content">
    <div class="px-15px px-lg-25px">

      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0 h6">Send Newsletter</h5>
            </div>

            <div class="card-body">
              <form class="form-horizontal" action="/admin/newsletter/send" method="POST">
                <div class="form-group row">
                  <label class="col-sm-2 col-from-label" for="emails">Emails (Subscribers)</label>
                  <div class="col-sm-10">
                    <select class="form-control aiz-selectpicker form-control" data-style="btn-outline-warning" name="emails" multiple data-actions-box="true">
                      <optgroup label="Condiments">
                        <% Subscribers.forEach(subscribe => { %>
                          <option><%= subscribe.email %></option>
                        <% }) %>
                      </optgroup>
                    </select>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-sm-2 col-from-label" for="subject">Newsletter subject</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="subject" id="subject" required="">
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-sm-2 col-from-label" for="content">Newsletter content</label>
                  <div class="col-sm-10">
                    <textarea rows="8" class="form-control aiz-text-editor" data-buttons="[[&quot;font&quot;, [&quot;bold&quot;, &quot;underline&quot;, &quot;italic&quot;]],[&quot;para&quot;, [&quot;ul&quot;, &quot;ol&quot;]], [&quot;insert&quot;, [&quot;link&quot;, &quot;picture&quot;]],[&quot;view&quot;, [&quot;undo&quot;,&quot;redo&quot;]]]" name="content" required="" style="display: none;"></textarea>
                  </div>
                </div>
                <div class="form-group mb-0 text-right">
                  <button type="submit" class="btn btn-primary">Send</button>
                </div>
              </form>
            </div>

          </div>
        </div>
      </div>

    </div>
    <div class="bg-white text-center py-3 px-15px px-lg-25px mt-auto">
      <p class="mb-0">Â© v1.0</p>
    </div>
  </div><!-- .aiz-main-content -->
</div>